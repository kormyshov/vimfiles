template<typename T>
class PersistentStack{
	vector<T> v;
	vector<int> p;
public:
	PersistentStack(){					// {{{
		v.push_back(new T);
		p.push_back(-1);
	}
										// }}}
	PersistentStack(int n){				// {{{
		v.reserve(n);
		p.reserve(n);
		v.push_back(new T);
		p.push_back(-1);
	}
										// }}}
	bool empty(int n){					// {{{
		return p[n] == -1;
	}
										// }}}
	T top(int n){						// {{{
		return v[n];
	}
										// }}}
	void push(int n, const T& x){		// {{{
		v.push_back(x);
		p.push_back(n);
	}
										// }}}
	void pop(int n){					// {{{
		int t = p[n];
		if(t >= 0)
			v.push_back(v[t]),
			p.push_back(p[t]);
	}
										// }}}
};
