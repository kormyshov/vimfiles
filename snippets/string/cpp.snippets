void pfun(const string &_s, vector<int> &_v)
{
	int _j, _n = (int)_s.size();
	_v.assign(_n, 0);
	for(int _i=1; _i<_n; ++_i)
	{
		_j = _v[_i-1];
		while(_j > 0 && _s[_i] != _s[_j]) _j = _v[_j-1];
		if(_s[_i] == _s[_j]) ++_j;
