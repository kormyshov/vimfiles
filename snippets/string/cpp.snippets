	for(int _i=0; _i<_n; ++_i)
	{
		_k = (_i>_r ? 0 : MIN(_d1[_l+_r-_i]-1, _r-_i)) + 1;
		while(_i+_k < _n && _i-_k >= 0 && _s[_i+_k] == _s[_i-_k]) ++_k;
		_d1[_i] = _k--;
		if(_i+_k > _r) { _l=_i-_k; _r=_i+_k; }
	}

	_l=0; _r=-1;
	for(int _i=0; _i<_n; ++_i)
	{
		_k = (_i>_r ? 0 : MIN(_d2[_l+_r-_i+1], _r-_i+1)) + 1;
